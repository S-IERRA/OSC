<Window x:Class="UiV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiV1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="700"
        Background="Transparent"
        >
    <Grid>

        <Border Background="Black">

            <Grid>
                <TextBox x:Name="EmailBox" HorizontalAlignment="Center" Width="120" Height="30" Margin="0 0 150 0"/>
                <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" Width="120" Height="30" Margin="0 0 -150 0"/>
                <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Width="120" Height="30" Margin="0 0 150 -90"/>
                <Button x:Name="LoginButton" Content="L" FontSize="20" HorizontalAlignment="Center" Width="50" Height="30" Margin="0 0 -80 -90"/>
                <Button x:Name="RegisterButton" Click="RegisterButton_Click" Content="R" FontSize="20" HorizontalAlignment="Center" Width="50" Height="30" Margin="0 0 -220 -90"/>
            </Grid>
            
        </Border>
        
    </Grid>
</Window>
